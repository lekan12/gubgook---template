<% @stories.each do |story| %>
  <div class="story row clearfix">
    <h2>
      <%= link_to story.title, story %><br>
      <small class="author">Submitted <%= time_ago_in_words(story.created_at) %> by <%= story.user.name %></small>
    </h2>

    <div class="btn-group">
      <a class="btn btn-default btn-sm" href="<%= story.url %>">Visit story</a>
      <%= link_to like_story_path(story), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Upvote
        <%= story.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_story_path(story), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down">
        Downvote
        <%= story.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>